#Using a Class with Threads
import threading
import time
class MyThread(threading.Thread):
def __init__(self, name):
super().__init__()
self.name = name
def run(self):
for i in range(3):
print(f"{self.name} is running... step {i+1}")
time.sleep(1)
# Create and start threads
t1 = MyThread("Thread-1")
t2 = MyThread("Thread-2")
t1.start()
t2.start()
t1.join()
t2.join()
print("Threading with classes finished.")
